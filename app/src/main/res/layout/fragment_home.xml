<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="107dp"
            app:cardBackgroundColor="#E49F9F"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_baseline_add_circle_outline_24"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp"
                android:typeface="normal"
                tools:text="New event" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="107dp"
            app:cardBackgroundColor="#7DCD81"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/butcar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="107dp"
            app:cardBackgroundColor="#8B60D6"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/butcar2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:foreground="@drawable/ic_baseline_add_circle_outline_24"
                app:backgroundTint="@android:color/darker_gray" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
